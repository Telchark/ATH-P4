<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnChooseFile" Content="Wybierz plik" HorizontalAlignment="Left" Margin="640,10,0,0" VerticalAlignment="Top" Width="142" Height="38" Click="btnChooseFile_Click"/>
        <TextBox x:Name="TB" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Content}" VerticalAlignment="Top" Width="625" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
